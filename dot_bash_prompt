# .bash_prompt
is_home() {
  [ -d "$HOME" ] && [ "$PWD" = "$HOME" ]
}

is_writable() {
  test -w .
}

PS1='\[\e[0m\]\e[30;47m\] \t \e[37;44m\] \u@\h \e[00m\]\[\e[34;41m\]'
if is_home; then
  PS1+='\[\e[00;41m\]  \w '
elif is_writable; then
  PS1+='\[\e[00;41m\]  \w '
else
  PS1+='\[\e[00;41m\]  \w '
fi
PS1+='\[\e[31;43m\] \e[30;43m\]  $(__git_ps1 "%s")\e[33;49m\]\[\e[00m\]\n\$ '
